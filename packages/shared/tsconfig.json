{
  // Inherit all settings from root config
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // Compiled JS output goes here
    "outDir": "./dist",

    // All source TypeScript files are here
    "rootDir": "./src",

    "composite": true
  },

  // Only look at files inside src/
  "include": ["src/**/*"]
}
